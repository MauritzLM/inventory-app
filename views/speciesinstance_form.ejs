<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= title %>
        </title>
</head>

<body>
    <header><%- include('./partials/header') %></header>
    <h1>
        <%= title %>
    </h1>

    <form action="" method="post" novalidate>
        <!-- Animal name -->
        <label for="animal_name">Name:</label>
        <input type="text" name="animal_name" id="animal_name"
            value="<%= (typeof species_instance !== 'undefined') ? species_instance.name : '' %>" required>

        <!-- Animal age -->
        <label for="animal_age">Age:</label>
        <input type="number" name="animal_age" id="animal_age"
            value="<%= (typeof species_instance !== 'undefined') ? species_instance.age : 0 %>" min="0">

        <!-- Select species -->
        <select name="animal_species" id="animal_species" required>
            <option value="">-- Select species --</option>
            <% species_list.forEach(species=> { %>
                <option value="<%= species._id %>">
                    <%= species.common_name %>
                </option>

                <% }) %>
        </select>

        <button type="submit">Submit</button>
    </form>

    <!-- Display errors -->
    <% if (typeof errors !=='undefined' ) { %>
        <ul>
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>

        </ul>
        <% } %>
</body>

</html>