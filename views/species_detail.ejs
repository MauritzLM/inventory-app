<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= title %>
        </title>
</head>

<body>
    <header><%- include('./partials/header') %></header>
    <main>
        <h1>
            <%= title %>
        </h1>
        <p>
            <%= species.description %>
        </p>

        <ul>
            <% species_instances.forEach(animal=> { %>
                <li>
                    <a href="<%= animal.url %>">
                        <%= animal.name %>
                    </a>
                </li>

                <% }) %>
        </ul>

        <a href="/catalog/speciesinstance/create">Add <%= species.common_name %> to zoo</a>
        <div>
            <a href="<%= species.url %>/update">Update</a>
            <a href="<%= species.url %>/delete">Remove</a>
        </div>
    </main>
</body>

</html>