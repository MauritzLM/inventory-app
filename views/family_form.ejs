<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>
            <%= title %>
        </title>

</head>

<body>
    <header><%- include('./partials/header') %></header>
    <main>
        <h1>
            <%= title %>
        </h1>
        <form action="" method="post" novalidate>
            <label for="family_name">Family name</label>
            <input type="text" id="family_name" name="family_name"
                value="<%= (typeof family !== 'undefined') ? family.name : '' %>" required>

            <label for="family_description">Description</label>
            <textarea name="family_description" id="family_description" cols="30" rows="10"
                required> <%= (typeof family !== 'undefined') ? family.description : '' %></textarea>
            <button type="submit">Submit</button>
        </form>

        <% if (typeof errors!=='undefined' ) { %>
            <ul>
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>

                    <% }) %>
            </ul>
            <% } %>
    </main>
    <footer></footer>
</body>

</html>